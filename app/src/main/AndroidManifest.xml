<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BIRD_FARM_SHOP_ANDROID"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!--  Bird Config  -->
        <activity
            android:name=".bird.BirdUploadActivity"
            android:exported="false" />
        <activity
            android:name=".bird.BirdUpdateActivity"
            android:exported="false" />
        <activity
            android:name=".bird.BirdDetailActivity"
            android:exported="false" />
        <activity
            android:name=".bird.BirdActivity"
            android:exported="false" />

        <!--  Nest Config  -->
        <activity
            android:name=".nest.NestActivity"
            android:exported="false" />
        <activity
            android:name=".nest.NestUpdateActivity"
            android:exported="false" />
        <activity
            android:name=".nest.NestDetailActivity"
            android:exported="false" />
        <activity
            android:name=".nest.NestUploadActivity"
            android:exported="false" />

        <!--  Food Config  -->
        <activity
            android:name=".food.FoodActivity"
            android:exported="false" />
        <activity
            android:name=".food.FoodDetailActivity"
            android:exported="false" />
        <activity
            android:name=".food.FoodUploadActivity"
            android:exported="false" />
        <activity
            android:name=".food.FoodUpdateActivity"
            android:exported="false" />

        <!--    Config for Login and Register Activity  -->
        <activity android:name=".authenticate.LoginActivity"/>
        <activity android:name=".authenticate.RegisterActivity"/>
        <activity android:name=".MainActivityNavigationBar"/>

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>